{
    "name": "COSMIC C Compiler For STM8",
    "id": "COSMIC_STM8",
    "version": {
        "args": "",
        "matcher": "(?<name>COSMIC Software STM8 C Cross Compiler.*?) V(?<version>[\\d\\.]+)"
    },
    "global": {
        "model": {
            "type": "selectable",
            "command": {
                "small": "+model-small",
                "large": "+model-large",
                "small-0": "+model-small-small",
                "large-0": "+model-large-small",
                "false": "+model-small"
            },
            "group": [
                "c/cpp",
                "asm"
            ],
            "location": "first"
        },
        "cxstm8-config": {
            "type": "value",
            "command": "-f ",
            "group": [
                "c/cpp",
                "asm"
            ],
            "location": "first"
        },
        "output-list-file": {
            "type": "selectable",
            "command": {
                "true": "-l",
                "false": ""
            },
            "group": [
                "c/cpp",
                "asm"
            ]
        },
        "output-debug-info": {
            "type": "selectable",
            "command": {
                "enable": "+debug",
                "disable": "",
                "false": ""
            },
            "group": [
                "c/cpp",
                "asm"
            ]
        },
        "no-bss": {
            "type": "selectable",
            "command": {
                "true": "+nobss",
                "false": ""
            },
            "group": [
                "c/cpp",
                "asm"
            ]
        },
        "const-in-text": {
            "type": "selectable",
            "command": {
                "true": "+nocst",
                "false": ""
            },
            "group": [
                "c/cpp",
                "asm"
            ]
        },
        "verbose": {
            "type": "selectable",
            "command": {
                "true": "-v",
                "false": ""
            },
            "group": [
                "c/cpp",
                "asm",
                "linker"
            ]
        },
        "misc-controls": {
            "type": "list",
            "command": "",
            "group": [
                "c/cpp",
                "asm"
            ]
        }
    },
    "groups": {
        "c/cpp": {
            "$path": "cxstm8.exe",
            "$includes": {
                "body": "-i ${value}"
            },
            "$defines": {
                "body": "-d${key}=${value}"
            },
            "$output": "-co \"${outDir}\" ${in}",
            "$outputSuffix": ".o",
            "$default": [],
            "c99-mode": {
                "type": "selectable",
                "command": {
                    "true": "+c99",
                    "false": ""
                }
            },
            "optimization": {
                "type": "selectable",
                "command": {
                    "none": "",
                    "fast": "+Ofast",
                    "size": "+Osize",
                    "false": ""
                }
            },
            "split-functions": {
                "type": "selectable",
                "command": {
                    "true": "+ffunction-sections",
                    "false": ""
                }
            },
            "plain-char-is-unsigned": {
                "type": "selectable",
                "command": {
                    "true": "+unsigned-chars",
                    "false": ""
                }
            },
            "strict-mode": {
                "type": "selectable",
                "command": {
                    "true": "+strict",
                    "false": ""
                }
            },
            "reverse-bits-order": {
                "type": "selectable",
                "command": {
                    "true": "+rev",
                    "false": ""
                }
            },
            "warnings": {
                "type": "selectable",
                "command": {
                    "less": "+Wless",
                    "normal": "+Wnormal",
                    "all": "+Wall",
                    "false": ""
                }
            }
        },
        "asm": {
            "$path": "cxstm8.exe",
            "$includes": {
                "body": "-i ${value}"
            },
            "$output": "-co \"${outDir}\" ${in}",
            "$outputSuffix": ".o",
            "$default": [],
            "defines": {
                "type": "list",
                "command": "-d"
            }
        },
        "linker": {
            "$path": "clnk.exe",
            "$default": [],
            "$output": "-o ${out}",
            "$outputSuffix": ".sm8",
            "$libs": {
                "body": "-l ${value}"
            },
            "$linkMap": {
                "type": "value",
                "command": "-m ${mapPath}"
            },
            "$matcher": [
                "^\\s*start [0-9a-fA-F]+ end [0-9a-fA-F]+ length [0-9a-fA-F\\s]+ segment .*"
            ],
            "$lkfPath": {
                "type": "value",
                "command": ""
            },
            "$LIB_FLAGS": {
                "type": "list",
                "command": ""
            },
            "LD_FLAGS": {
                "type": "list",
                "command": ""
            },
            "$outputBin": [
                {
                    "name": "output elf file",
                    "toolPath": "cvdwarf.exe",
                    "outputSuffix": ".elf",
                    "command": "${CXSTM8_USR_ARGS__cvdwarf} -o ${output} ${linkerOutput}"
                },
                {
                    "name": "output hex file",
                    "toolPath": "chex.exe",
                    "outputSuffix": ".hex",
                    "command": "${CXSTM8_USR_ARGS__chex} ${CXSTM8_USR_ARGS__chex_hex} -fi -o ${output} ${linkerOutput}"
                },
                {
                    "name": "output s19 file",
                    "toolPath": "chex.exe",
                    "outputSuffix": ".s19",
                    "command": "${CXSTM8_USR_ARGS__chex} ${CXSTM8_USR_ARGS__chex_s19} -fm -o ${output} ${linkerOutput}"
                }
            ]
        },
        "linker-lib": {
            "$path": "clib.exe",
            "$objPathSep": " ",
            "$outputSuffix": ".lib",
            "$output": "-c -v ${out} ${in}"
        }
    }
}